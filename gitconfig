[user]
	name = Robby Colvin
  email = geetarista@gmail.com
[color]
  diff = auto
  status = auto
  branch = auto  
  ui = auto
[color "branch"]
  current = yellow
  local = blue
  remote = red
[color "diff"]
  meta = white
  frag = blue bold
  old = red bold
  new = green bold
[color "status"]
  added = green
  changed = yellow
  untracked = red
[branch "master"]
  remote = origin
  merge = refs/heads/master
[core]
	excludesfile = /Users/robbyc/.gitignore
  editor = mvim -w
[push]
  default = matching
[pull]
  default = matching
[apply]
  whitespace = nowarn
[alias]
  a = add
  c = commit
  s = status
  ss = status -sb
  ca = commit -a
  co = checkout
  cob = checkout -b
  cor = checkout -t
  b = branch
  m = merge
  # merge feature
  mf = rebase HEAD feature && git rebase HEAD @{-2}
  d = diff
  p = push
  pl = pull
  plr = pull --rebase
  unadd = reset HEAD
  undo = reset --soft HEAD^
  pulldiff = diff HEAD^ HEAD
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
  l1 = log --pretty=oneline --abbrev-commit --decorate
  l1d = log --oneline --decorate
  lp = log -p
  wd = diff --word-diff
[merge]
  tool = vim # opendiff
[github]
  user = geetarista

