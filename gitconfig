# vim: set ft=sh ts=4 sts=4 sw=4 noet:
# [hub]
#     protocol = https

[core]
	excludesfile = ~/.gitignore
	editor = mvim -w
	quotepath = false
[credential]
	helper = /usr/local/bin/git-credential-osxkeychain
[user]
	name = Robby Colvin
	email = geetarista@gmail.com
[color]
	diff = auto
	status = auto
	branch = auto
	ui = auto
[color "branch"]
	current = yellow
	local = blue
	remote = red
[color "diff"]
	meta = white
	frag = blue bold
	old = red bold
	new = green bold
[color "status"]
	added = green
	changed = yellow
	untracked = red
[push]
	default = tracking
[pull]
	default = tracking
[apply]
	whitespace = nowarn
[alias]
	a = add --all
	begone = "!begone() { git branch -d $1 && git push origin :$1 && git remote prune origin; }; begone"
	c = commit
	ca = commit --amend --reuse-message=HEAD
	ca = commit -a
	co = checkout
	cob = checkout -b
	cor = "!cor() { git checkout -t origin/$1; }; cor"
	b = branch
	d = diff -b
	m = merge
	# merge feature
	mf = rebase HEAD feature && git rebase HEAD @{-2}
	p = push
	pl = pull
	plr = pull --rebase
	# prune local
	prl = "!git branch -d $(git branch --merged | grep -v '^*' | grep -v 'master')"
	# prune remote
	prr = "!git push origin $(git branch -r --merged | grep -v master | sed -e 's/origin\\//:/')"
	pulldiff = diff HEAD^ HEAD
	l = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	l1 = log --pretty=oneline --abbrev-commit --decorate
	l1d = log --oneline --decorate
	lp = log -p
	nix = "!nix() { git branch -D $1 && git push origin :$1; git remote prune origin; }; nix"
	s = status -sb
	su = submodule update
	sync = "!sync() { git fetch origin master; git rebase -p origin/$1; }; sync"
	unadd = reset HEAD
	undo = reset --soft HEAD^
	upsync = "!upsync() { git fetch upstream; git checkout master; git merge upstream/master; }; upsync"
	wd = diff --word-diff
	y = "!y() { git log --since yesterday --oneline --author=\"$(git config user.name)\"; }; y"
[merge]
	tool = vim # opendiff
[github]
	user = geetarista
[init]
	templatedir = ~/.git_template
[url "git@github.com:"]
	insteadOf = "gh:"
	pushInsteadOf = "github:"
	pushInsteadOf = "git://github.com/"
[url "git://github.com/"]
	insteadOf = "github:"
[url "git@gist.github.com:"]
	insteadOf = "gst:"
	pushInsteadOf = "gist:"
	pushInsteadOf = "git://gist.github.com/"
[url "git://gist.github.com/"]
	insteadOf = "gist:"
[browser "gitscm"]
	cmd = /bin/sh -c 'open http://git-scm.com/docs/$(basename $1 .html)' --
[help]
	browser = gitscm
	autocorrect = 0
[transfer]
	fsckobjects = true
[fetch]
	fsckobjects = true
[receive]
	fsckobjects = true

[hub]
protocol = https
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
