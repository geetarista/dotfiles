# vim: set ft=sh:

[user]
	name = Robby Colvin
	email = geetarista@gmail.com
[color]
	diff = auto
	status = auto
	branch = auto
	ui = auto
[color "branch"]
	current = yellow
	local = blue
	remote = red
[color "diff"]
	meta = white
	frag = blue bold
	old = red bold
	new = green bold
[color "status"]
	added = green
	changed = yellow
	untracked = red
[branch "master"]
	remote = origin
	merge = refs/heads/master
[core]
	excludesfile = ~/.gitignore
	editor = mvim -w
	quotepath = false
[push]
	default = matching
[pull]
	default = matching
[apply]
	whitespace = nowarn
[alias]
	a = add
	c = commit
	ca = commit --amend --reuse-message=HEAD
	s = status -sb
	ca = commit -a
	co = checkout
	cob = checkout -b
	cor = checkout -t
	b = branch
	m = merge
	# merge feature
	mf = rebase HEAD feature && git rebase HEAD @{-2}
	d = diff
	p = push
	pl = pull
	plr = pull --rebase
	unadd = reset HEAD
	undo = reset --soft HEAD^
	pulldiff = diff HEAD^ HEAD
	l = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	l1 = log --pretty=oneline --abbrev-commit --decorate
	l1d = log --oneline --decorate
	lp = log -p
	wd = diff --word-diff
	sync = "!sync() { git fetch origin master; git rebase -p origin/$1; }; sync"
	su = submodule update
	begone = "!begone() { git branch -d $1 && git push origin :$1 && git remote prune origin; }; begone"
	nix = "!nix() { git branch -D $1 && git push origin :$1; git remote prune origin; }; nix"
	y = "!y() { git log --since yesterday --oneline --author=\"$(git config user.name)\"; }; y"
[merge]
	tool = vim # opendiff
[github]
	user = geetarista
[init]
	templatedir = ~/.git_template
[url "git@github.com:"]
	insteadOf = "gh:"
	pushInsteadOf = "github:"
	pushInsteadOf = "git://github.com/"
[url "git://github.com/"]
	insteadOf = "github:"
[url "git@gist.github.com:"]
	insteadOf = "gst:"
	pushInsteadOf = "gist:"
	pushInsteadOf = "git://gist.github.com/"
[url "git://gist.github.com/"]
	insteadOf = "gist:"
[browser "gitscm"]
	cmd = /bin/sh -c 'open http://git-scm.com/docs/$(basename $1 .html)' --
[help]
	browser = gitscm
	autocorrect = 1
