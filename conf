crontab ~/.crontab

# vi mode in bash
# going to try this out some day
# set -o vi

## Bash history settings
# append history instead of overwriting
# shopt -s histappend
unset HISTFILESIZE
HISTSIZE=1000
# HISTCONTROL=ignorespace
# HISTCONTROL=ignoredups
HISTCONTROL=ignoreboth
# Ignore specific commands
HISTIGNORE='ls:bg:fg:history'
# Format timestamp for each record
HISTTIMEFORMAT='%F %T '
# Split multiple commands
# shopt -s cmdhist
# Record each command immediately instead of waiting until session termination
# PROMPT_COMMAND='history -a; history -n'

# a -- black
# b -- red
# c -- green
# d -- brown
# e -- blue
# f -- magenta
# g -- cyan
# h -- light gray
# A -- bold black, usually shows up as dark gray
# B -- bold red
# C -- bold green
# D -- bold brown, usually shows up as yellow
# E -- bold blue
# F -- bold magenta
# G -- bold cyan
# H -- bold light gray; looks like bright white
# x -- default foreground or background

DIR=Ex; SYM_LINK=Gx; SOCKET=Fx; PIPE=dx; EXE=Cx; BLOCK_SP=Dx; CHAR_SP=Dx; EXE_SUID=hb; EXE_GUID=ad; DIR_STICKY=Ex; DIR_WO_STICKY=Ex

export LSCOLORS="$DIR$SYM_LINK$SOCKET$PIPE$EXE$BLOCK_SP$CHAR_SP$EXE_SUID$EXE_GUID$DIR_STICKY$DIR_WO_STICKY"
export CLICOLOR=1
# export TERM=xterm-color

GREEN="\[\033[0;32m\]"
YELLOW="\[\033[0;33m\]"
WHITE="\[\033[0;0m\]"

ruby_version=$(rbenv version-name)
case ${ruby_version%-*} in
  1.9.3) ruby_version_string="‚ù∏" ;;
  *)     ruby_version_string="system" ;;
esac

PS1="$GREEN\$(date +%H:%M) \w$YELLOW $ruby_version_string \$(__git_ps1 "[%s]")$WHITE\$ "

