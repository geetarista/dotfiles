export PATH="."
export PATH="$PATH:$HOME/.bin"
export PATH="$PATH:$HOME/bin"
export PATH="$PATH:/usr/local/bin"
export PATH="$PATH:/usr/local/lib"
export PATH="$PATH:/usr/local/sbin"
export PATH="$PATH:/opt/local/bin"
export PATH="$PATH:/opt/local/lib"
export PATH="$PATH:/opt/local/sbin"
export PATH="$PATH:/usr/bin"
export PATH="$PATH:/usr/sbin"
export PATH="$PATH:/bin"
export PATH="$PATH:/sbin"

export PYTHONPATH="$(brew --prefix)/lib/python2.7/site-packages"

export MANPATH="/usr/local/man:/usr/local/mysql/man:$MANPATH"

export EDITOR="mvim"

export GIT_EDITOR="$EDITOR -f" # don't background

export AUTOFEATURE=true

export CDPATH=.:~:~/workspace:~/gocode/src/github.com/geetarista

# Go-specific
export GOPATH="$HOME/gocode"
export PATH="$PATH:${GOPATH}/bin"

# Colors for `man`
export LESS_TERMCAP_mb=$'\E[01;31m'
export LESS_TERMCAP_md=$'\E[01;34m'
export LESS_TERMCAP_me=$'\E[0m'
export LESS_TERMCAP_se=$'\E[0m'
export LESS_TERMCAP_so=$'\E[01;44;33m'
export LESS_TERMCAP_ue=$'\E[0m'
export LESS_TERMCAP_us=$'\E[01;32m'

# Keep less output after quit
export LESS="-X -R"

export GIT_PS1_SHOWDIRTYSTATE=1

export VAGRANT_DEFAULT_PROVIDER=vmware_fusion

